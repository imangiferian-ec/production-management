{% extends 'base.html.twig' %}
{% block body %}
  <div class="row">
    <div class="col-sm-12">
      <h1>{{ module_name }}</h1><hr>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6 offset-sm-2">
      <h3>{{ page_title }}</h3>
    </div>
    <div class="col-sm-2">
      <p><a href="/role/new" class="btn btn-primary btn-block float-right">New Role</a></p><br><br>
    </div>
  </div>
  {% if roles %}
   <div class="row">
    <div class="col-sm-8 offset-sm-2">
        <div class="table table-responsive">
          <table id="roles" class="table table-bordered table-stripped">
           <thead>
            <tr class="text-center">
              <th>Rolename</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
           </thead>
           <tbody>
            {% for role in roles %}
              <tr>
                <td>{{ role.roleName }}</td>
                <td>{{ role.description }}</td>
                <td class="text-center">
                  <a href="/role/{{role.id}}" class="btn btn-primary btn-sm">Show</a>
                  <a href="/role/edit/{{role.id}}" class="btn btn-warning btn-sm">Edit</a>
                  <a href="#" class="btn btn-sm btn-danger delete-role" data-id="{{ role.id }}">Delete</a>
                </td>
              </tr>
            {% endfor %}
           </tbody>
          </table>
        </div>
      </div>
    </div>
  {% else %}
  <div class="row">
   <div class="col-sm-8 offset-sm-2">
    <h3>Return a 0 result</h3>
   </div>
  </div>
  {% endif %}
{% endblock %}
{% block javascripts %}
  <script src="js/main.js"></script>
{% endblock %}
